doctype html
html(lang='zh-cn',ng-app="app")
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        title 累计可疑OpenId
        link(href='css/bootstrap.min.css', rel='stylesheet')
        link(href="css/global.css",rel="stylesheet")
    body
        .container-fluid.header
            .row
                .col-lg-12
                    include include/header.jade
        .container-fluid
            .row
                .col-lg-2.sidebar
                    include include/ptl-sidebar.jade
                .col-lg-10.contaner
                    .row
                        .col-lg-12
                            h3.page-header 累计可疑OpenId
                            include include/illicit_1_form-search.jade
                            .wbTable(ng-controller="customersCtrl")
                                table.table.table-bordered
                                    thead
                                        tr
                                            th(ng-repeat="item in ths") {{item}}
                                    tbody
                                        tr(ng-repeat="item in tds")
                                            td
                                                label
                                                    input(type="checkbox")
                                            td {{item.openid}}
                                            td {{item.name}}
                                            td {{item.main_warn}}
                                            td
                                                a.btn.btn-info.btn-sm(target="_blank",href="ptl_index.html?openid={{item.openid}}") 查看
                                                button.btn.btn-danger.btn-sm(ng-click="setOpenidForIllicit($event,item.openid)") 列入可疑
                                include include/pagination.jade
        script(src='js/jquery.min.js')
        script(src='js/angular.min-1.5.10.js')
        script(src='js/bootstrap.min.js')
        script(src='js/global.js')
        script(src='js/ptl_illicit_1.js')
