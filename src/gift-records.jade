include include/mixin.jade
doctype html
html(lang='zh-cn',ng-app="app")
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        title 兑奖记录
        link(href='css/bootstrap.min.css', rel='stylesheet')
        link(href="css/global.css",rel="stylesheet")
        link(href="css/gift-records.css",rel="stylesheet")
    body
        .container-fluid.header
            .row
                .col-sm-12
                    include include/header.jade
        .container-fluid
            .row
                .col-sm-2.sidebar(ng-controller="ctrlSidebar")
                    include include/sidebar.jade
                .col-sm-10.contaner(ng-controller="customersCtrl")
                    h3.page-header 兑奖记录
                    .wbFilter.form-inline
                        .form-group
                            label.control-label 快递单号：
                            label.radio-inline
                                input(type='radio',name='pkg',ng-model="filter.pkg",ng-value="2")
                                | 全部
                            label.radio-inline
                                input(type='radio',name='pkg',ng-model="filter.pkg",ng-value="1")
                                | 已填单号
                            label.radio-inline
                                input(type='radio',name='pkg',ng-model="filter.pkg",ng-value="0")
                                | 未填单号
                        button.btn.btn-sm.btn-success(ng-click="getPage()") 确定
                    .wbTable
                        table.table.table-bordered
                            thead
                                tr
                                    th(ng-repeat="item in ths") {{item}}
                            tbody
                                tr(ng-repeat="item in tds")
                                    td {{item.id}}
                                    td {{item.openid}}
                                    td {{item.obj}}
                                    td {{item.act_time}}
                                    td.tdPackage {{item.package}}
                                    td
                                        a.btn.btn-info.btn-sm(target="_blank",href="openid-info.html?openid={{item.openid}}") 查看
                                        button.btn.btn-success.btn-sm(ng-if="user.type==userType.courier",ng-click="inputPak($event,item.id)") 录入单号
                        .paginationer
                            label.pull-left
                                b.lab-index {{pagination.page}}
                                | /
                                b.lab-total {{pagination.total}}
                            .pull-right
                                button.btn.btn-default.btn-prev(ng-click="getPrevPage()") 上一页
                                button.btn.btn-default.btn-next(ng-click="getNextPage()") 下一页
        +includeScriptFiles("js/gift-records.js")