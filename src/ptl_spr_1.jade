include include/mixin.jade
doctype html
html(lang='zh-cn',ng-app="app")
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        title SPR查询
        link(href='css/bootstrap.min.css', rel='stylesheet')
        link(href="css/global.css",rel="stylesheet")
    body
        .container-fluid.header
            .row
                .col-lg-12
                    include include/header.jade
        .container-fluid
            .row
                .col-lg-2.sidebar
                    include include/ptl-sidebar.jade
                .col-lg-10.contaner
                    .row
                        .col-lg-12
                            h3.page-header SPR查询
                            include include/ptl_spr-wbSearch.jade
                            .wbTable(ng-controller="customersCtrl")
                                table.table.table-bordered
                                    thead
                                        tr
                                            th(ng-repeat="item in ths") {{item}}
                                    tbody
                                        tr(ng-repeat="item in tds")
                                            include include/ptl_spr-table.jade
                                            td
                                                a.btn.btn-primary(target="_blank",href="ptl_spr_edit.html?code={{item.code}}") 修改
                        .col-lg-12
                            h3.page-header 名下所有SPR
                            .wbAllSpr(ng-controller="customersCtrl2")
                                table.table.table-bordered
                                    thead
                                        tr
                                            th(ng-repeat="item in ths") {{item}}
                                    tbody
                                        tr(ng-repeat="item in tds")
                                            include include/ptl_spr-table.jade
                                            td
                                                a.btn.btn-primary(target="_blank",href="ptl_spr_edit.html?code={{item.code}}") 修改
                                include include/pagination.jade
        +includeScriptFiles("js/ptl_spr_1.js")