include include/mixin.jade
doctype html
html(lang='zh-cn',ng-app="app")
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        title SPR查询
        link(href='css/bootstrap.min.css', rel='stylesheet')
        link(href="css/global.css",rel="stylesheet")
    body
        .container-fluid.header
            .row
                .col-sm-12
                    include include/header.jade
        .container-fluid
            .row
                .col-sm-2.sidebar
                    include include/mkt-sidebar.jade
                .col-sm-10.contaner
                    .row
                        .col-sm-12
                            h3.page-header SPR查询
                            include include/ptl_spr-wbSearch.jade
                            .wbTable(ng-controller="customersCtrl")
                                table.table.table-bordered
                                    thead
                                        tr
                                            th(ng-repeat="item in ths") {{item}}
                                    tbody
                                        tr(ng-repeat="item in tds")
                                            include include/ptl_spr-table.jade
                                            td
                                                a.btn.btn-sm.btn-primary(target="_blank",href="sprEdit.html?code={{item.code}}") 修改
                                                button.btn.btn-sm.btn-success(ng-click="confirmChange($event)") 确认修改
                                                button.btn.btn-sm.btn-danger(ng-click="cancelChange($event)") 取消修改
                        .col-sm-12
                            h3.page-header 待确认SPR修改请求
                            .wbAllSpr(ng-controller="customersCtrl2")
                                table.table.table-bordered
                                    thead
                                        tr
                                            th(ng-repeat="item in ths") {{item}}
                                    tbody
                                        tr(ng-repeat="item in tds")
                                            include include/ptl_spr-table.jade
                                            td
                                                a.btn.btn-sm.btn-primary(target="_blank",href="sprEdit.html?code={{item.code}}") 修改
                                                button.btn.btn-sm.btn-success(ng-click="confirmChange($event)") 确认修改
                                                button.btn.btn-sm.btn-danger(ng-click="cancelChange($event)") 取消修改
                                include include/pagination.jade
        +includeScriptFiles("js/mkt_spr_1.js")