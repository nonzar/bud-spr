include include/mixin.jade
doctype html
html(lang='zh-cn',ng-app="app")
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        title 兑奖记录
        link(href='css/bootstrap.min.css', rel='stylesheet')
        link(href="css/global.css",rel="stylesheet")
    body
        .container-fluid.header
            .row
                .col-sm-12
                    include include/header.jade
        .container-fluid
            .row
                .col-sm-2.sidebar
                    include include/mkt-sidebar.jade
                .col-sm-10.contaner
                    h3.page-header 兑奖记录
                    .wbTable(ng-controller="customersCtrl")
                        table.table.table-bordered
                            thead
                                tr
                                    th(ng-repeat="item in ths") {{item}}
                            tbody
                                tr(ng-repeat="item in tds")
                                    include include/gift_records.jade
                                    td
                                        a.btn.btn-info.btn-sm(target="_blank",href="openidInfo.html?openid={{item.openid}}") 查看
                                        button.btn.btn-success.btn-sm(ng-click="confirmChange($event)") 确认
                        include include/pagination.jade
        +includeScriptFiles("js/mkt_gift_records.js")