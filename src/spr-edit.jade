include include/mixin.jade
doctype html
html(lang='zh-cn',ng-app="app")
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible',content='IE=edge')
        meta(name='viewport',content='width=device-width,initial-scale=1')
        title SPR查询
        link(href='css/bootstrap.min.css',rel='stylesheet')
        link(href="css/global.css",rel="stylesheet")
    body
        .container-fluid.header
            .row
                .col-sm-12
                    include include/header.jade
        .container
            .row
                .col-sm-12.contaner
                    h3.page-header SPR修改
                    .form-horizontal(ng-controller="ngCtrl")
                        .form-group
                            .col-sm-11
                                .input-group
                                    .input-group-addon spr验证码
                                    input#code.form-control(type='text',placeholder='spr验证码',value='',ng-model="txtCode")
                            .col-sm-1
                                button.btn.btn-primary.btn-getInfo(ng-click="f_getInfo()") 查询
                        .form-group
                            label.col-sm-1.control-label(for='name') spr名字
                            .col-sm-11
                                input#name.form-control(type='text',placeholder='spr名字',ng-model="txtName",readonly="readonly")
                        .form-group
                            label.col-sm-1.control-label(for='region') 大区
                            .col-sm-11
                                input#region.form-control(type='text',placeholder='大区',ng-model="txtRegion",readonly="readonly")
                        .form-group
                            label.col-sm-1.control-label(for='city') 城市
                            .col-sm-11
                                input#city.form-control(type='text',placeholder='城市',ng-model="txtCity",readonly="readonly")
                        .form-group
                            label.col-sm-1.control-label(for='qtype') 店铺类型
                            .col-sm-11
                                select#qtype.form-control(ng-model="txtQtype",ng-options="x for x in ['中餐','西餐','夜场'] track by x")
                        .form-group
                            label.col-sm-1.control-label(for='') 离职状态
                            .col-sm-11
                                label.radio-inline
                                    input(type="radio",name="isover",value="0",ng-model="radIsover")
                                    |  离职
                                label.radio-inline
                                    input(type="radio",name="isover", value="1",ng-model="radIsover")
                                    |  在职
                        .form-group
                            .col-sm-offset-1.col-sm-11
                                button.btn.btn-primary.btn-submit(ng-click="f_submit()") 提交
        +includeScriptFiles("js/spr-edit.js")