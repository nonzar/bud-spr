include include/mixin.jade
doctype html
html(lang='zh-cn',ng-app="app")
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        title 登录
        link(href='css/bootstrap.min.css', rel='stylesheet')
        link(href="css/global.css",rel="stylesheet")
        link(href="css/login.css",rel="stylesheet")
    body
        .container
            .wbLogin(ng-controller="ctrlLogin")
                .row
                    .col-sm-12
                        h1.page-header 登录
                form
                    .row
                        .col-sm-12
                            label(for="user") 账号
                            input.form-control#user(type="text",placeholder="账号",ng-model="txtUser")
                    br
                    .row
                        .col-sm-12
                            label(for="pass") 密码
                            input.form-control#pass(type="password",placeholder="密码",ng-model="txtPass")
                    br
                    .row
                        .col-sm-12
                            input.btn.btn-info.col-sm-12(type="submit",ng-model="btnLogin",ng-click="login($event)")
        +includeScriptFiles("js/login.js")